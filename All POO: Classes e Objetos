//Atividade 01
package Clientes;

public class Cliente {

    private String nome;
    private String cpf;
    private String telefone;
    private int idade;
    private String sexo;

    public Cliente(String nome, String cpf, String telefone, int idade, String sexo) {
        this.nome = nome;
        this.cpf = cpf;
        this.telefone = telefone;
        this.idade = idade;
        this.sexo = sexo;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getCpf() {
        return cpf;
    }

    public void setCpf(String cpf) {
        this.cpf = cpf;
    }

    public String getTelefone() {
        return telefone;
    }

    public void setTelefone(String telefone) {
        this.telefone = telefone;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }

    public String getSexo() {
        return sexo;
    }

    public void setSexo(String sexo) {
        this.sexo = sexo;
    }

    public void visualizar(){

        System.out.println("\nNome: " + getNome() + "\nCpf: " + getCpf() + "\nTelefone:  " + getTelefone()  + "\nSexo: "+ getSexo());

    }

}


//TESTE CLASSE
package Clientes;

public class TesteCliente {
    public static void main(String[] args) {
        Cliente cliente01 = new Cliente("Leonardo","540.333.100-58","(11)445898-28",19,"Masculino");
        Cliente cliente02 = new Cliente("Giovanna","144.385.212-55","(11)458742-44",18,"Feminino");
        cliente01.visualizar();
        cliente02.visualizar();
    }





}


//ATIVIDADE 02
//CLASSE
package funcionarios;

public class Funcionario {

    private String nome;
    private String cargo;
    private float salario;
    private String comeco;
    private String saida;

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getCargo() {
        return cargo;
    }

    public void setCargo(String cargo) {
        this.cargo = cargo;
    }

    public float getSalario() {
        return salario;
    }

    public void setSalario(float salario) {
        this.salario = salario;
    }

    public String getComeco() {
        return comeco;
    }

    public void setComeco(String comeco) {
        this.comeco = comeco;
    }

    public String getSaida() {
        return saida;
    }

    public void setSaida(String saida) {
        this.saida = saida;
    }

    public Funcionario(String nome, String cargo, float salario, String comeco, String saida) {
        this.nome = nome;
        this.cargo = cargo;
        this.salario = salario;
        this.comeco = comeco;
        this.saida = saida;

    }

    public void visualizar(){

        System.out.println("Nome: " + getNome() + "\nCargo: " + getCargo() + "\nSalario: " + getSalario()  + "\nComeço: "+ getComeco() +  "\nSaida: " +  getSaida());

    }

}

//TESTE CLASSE:
package funcionarios;

import java.util.Locale;

public class TesteFuncionario {

    public static void main(String[] args) {
        Locale.setDefault(Locale.US);
        Funcionario funcionario01 = new Funcionario("Leonardo","TI",100000,"12/12/2022","está atualme na empresa");
        Funcionario funcionario02 = new Funcionario("Paula","TI",100000,"12/12/2022","está atualme na empresa");

        funcionario01.visualizar();
        System.out.println("\n");
        funcionario02.visualizar();

    }



}


//ATIVIDADE 03
//CLASSE
package lojaGames;

public class Produtos {

        private String nome;
        private float valor;
        private String categoria;
        private int quantidade;
        private String cor;

    public Produtos(String nome, float valor, String categoria, int quantidade, String cor) {
        this.nome = nome;
        this.valor = valor;
        this.categoria = categoria;
        this.quantidade = quantidade;
        this.cor = cor;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public float getValor() {
        return valor;
    }

    public void setValor(float valor) {
        this.valor = valor;
    }

    public String getCategoria() {
        return categoria;
    }

    public void setCategoria(String categoria) {
        this.categoria = categoria;
    }

    public int getQuantidade() {
        return quantidade;
    }

    public void setQuantidade(int quantidade) {
        this.quantidade = quantidade;
    }

    public String getCor() {
        return cor;
    }

    public void setCor(String cor) {
        this.cor = cor;
    }

    public void visualizar(){

        System.out.println("Nome: " + getNome());
        System.out.println("Categoria: " + getCategoria());
        System.out.println("Valor: " + getValor());
        System.out.println("Quantidade: " + getQuantidade());
        System.out.println("Cor: " + getCor());


    }
}


//TESTE CLASSE:
package lojaGames;

public class TesteProdutos {
    public static void main(String[] args) {

        Produtos presente = new Produtos("Cadeira Gamer",1200,"Móvel",1,"Verde");
        Produtos presente02 = new Produtos("Cadeira Gamer",1200,"Móvel",1,"Vermelha");

        presente.visualizar();
        System.out.println("\n");
        presente02.visualizar();
    }
}

//ATIVIDADE 04
//CLASSE

package farmacias;

public class Farmacia {
    private String nomeDoProduto;
    private String categoriaDoProduto;
    private String laudoMedico;
    private String validadeDoProduto;
    private double valorDoProduto;
    private int quantidade;


    public Farmacia(String nomeDoProduto, String categoriaDoProduto, String laudoMedico, String validadeDoProduto, double valorDoProduto, int quantidade) {
        this.nomeDoProduto = nomeDoProduto;
        this.categoriaDoProduto = categoriaDoProduto;
        this.laudoMedico = laudoMedico;
        this.validadeDoProduto = validadeDoProduto;
        this.valorDoProduto = valorDoProduto;
        this.quantidade = quantidade;
    }

    public int getQuantidade() {
        return quantidade;
    }

    public void setQuantidade(int quantidade) {
        this.quantidade = quantidade;
    }

    public String getNomeDoProduto() {
        return nomeDoProduto;
    }

    public void setNomeDoProduto(String nomeDoProduto) {
        this.nomeDoProduto = nomeDoProduto;
    }

    public String getCategoriaDoProduto() {
        return categoriaDoProduto;
    }

    public void setCategoriaDoProduto(String categoriaDoProduto) {
        this.categoriaDoProduto = categoriaDoProduto;
    }

    public String getLaudoMedico() {
        return laudoMedico;
    }

    public void setLaudoMedico(String laudoMedico) {
        this.laudoMedico = laudoMedico;
    }

    public String getValidadeDoProduto() {
        return validadeDoProduto;
    }

    public void setValidadeDoProduto(String validadeDoProduto) {
        this.validadeDoProduto = validadeDoProduto;
    }

    public double getValorDoProduto() {
        return valorDoProduto;
    }

    public void setValorDoProduto(double valorDoProduto) {
        this.valorDoProduto = valorDoProduto;
    }

    public void visualizar(){

        System.out.println("Nome do produto: " + getNomeDoProduto() + "\n Categoria do produto:  " + getCategoriaDoProduto() + "\n Precisa de laudo médico?  " + getLaudoMedico()  + "\n Validade: "+ getValidadeDoProduto() +  "\n Valor: " +  getValorDoProduto() +  "\n Quantidade: " + getQuantidade());

    }
}

//TESTE CLASSE
package farmacias;

public class TesteFarmacia {
    public static void main(String[] args) {
        Farmacia pedido = new Farmacia("Xarope","Remédio","Não","09/01/2033",10.00,1);
        Farmacia pedido02 = new Farmacia("Neusadina","Remédio","Não","09/01/2033",12.00,4);

        pedido.visualizar();
        System.out.println("\n");
        pedido02.visualizar();

    }
}

//ATIVIDADE 05
//CLASSE
package ingressos;

public class Ingresso {

    private String nomeDoFilme;
    private String dataDoFilme;
    private String horario;
    private int sala;
    private int quantidade;

    public Ingresso(String nomeDoFilme, String dataDoFilme, String horario, int sala, int quantidade) {
        this.nomeDoFilme = nomeDoFilme;
        this.dataDoFilme = dataDoFilme;
        this.horario = horario;
        this.sala = sala;
        this.quantidade = quantidade;
    }

    public String getNomeDoFilme() {
        return nomeDoFilme;
    }

    public void setNomeDoFilme(String nomeDoFilme) {
        this.nomeDoFilme = nomeDoFilme;
    }

    public String getDataDoFilme() {
        return dataDoFilme;
    }

    public void setDataDoFilme(String dataDoFilme) {
        this.dataDoFilme = dataDoFilme;
    }

    public String getHorario() {
        return horario;
    }

    public void setHorario(String horario) {
        this.horario = horario;
    }

    public int getSala() {
        return sala;
    }

    public void setSala(int sala) {
        this.sala = sala;
    }

    public float getQuantidade() {
        return quantidade;
    }

    public void setQuantidade(int quantidade) {
        this.quantidade = quantidade;
    }

    public void visualizar(){

        System.out.println("Nome do filme: " + getNomeDoFilme() + "\nData do filme: " + getDataDoFilme() + "\nHorario do filme: " + getHorario()  + "\nSala: "+ getSala() +  "\nQuantidade: " +  getQuantidade());

    }


}

//TESTE CLASSE
package ingressos;

public class TesteIngresso {
    public static void main(String[] args) {
        Ingresso filme1 = new Ingresso("Batman","12/12/2024","14:00",4,1);
        Ingresso filme2 = new Ingresso("Homem aranha","14/02/2025","17:00",2,3);

        filme1.visualizar();
        System.out.println("\n");
        filme2.visualizar();
    }
}

//ATIVIDADE 06
//CLASSE
package faculdade;

public class curso {

    private String instituicao;
    private String nomeDoCurso;
    private float valor;
    private String inicio;
    private String fim;

    public curso(String instituicao, String nomeDoCurso, float valor, String inicio, String fim) {
        this.instituicao = instituicao;
        this.nomeDoCurso = nomeDoCurso;
        this.valor = valor;
        this.inicio = inicio;
        this.fim = fim;
    }

    public String getInstituicao() {
        return instituicao;
    }

    public void setInstituicao(String instituicao) {
        this.instituicao = instituicao;
    }

    public String getNomeDoCurso() {
        return nomeDoCurso;
    }

    public void setNomeDoCurso(String nomeDoCurso) {
        this.nomeDoCurso = nomeDoCurso;
    }

    public float getValor() {
        return valor;
    }

    public void setValor(float valor) {
        this.valor = valor;
    }

    public String getInicio() {
        return inicio;
    }

    public void setInicio(String inicio) {
        this.inicio = inicio;
    }

    public String getFim() {
        return fim;
    }

    public void setFim(String fim) {
        this.fim = fim;
    }

    public void visualizar(){

        System.out.println("Nome da instituição: " + getInstituicao() + "\nNome do curso: " + getNomeDoCurso() + "\nValor mês: " + getValor()  + "\nInicio: "+ getInicio() +  "\nFim: " +  getFim());

    }

}

//TESTE CLASSE
package faculdade;

public class TesteCurso {
    public static void main(String[] args) {
        curso faculdade01 = new curso("Unicesumar","Analise e desenvolvimento de sistemas",100,"10/01/2021","10/01/2024");
        curso faculdade02 = new curso("Unicesumar","Artes visuais",100,"10/01/2021","10/01/2024");

        faculdade01.visualizar();
        System.out.println("\n");
        faculdade02.visualizar();

    }

}




